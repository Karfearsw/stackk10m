{
  "version": 2,
  "builds": [
    {
      "src": "server/index-vercel.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public", "buildCommand": "npm run build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index-vercel.ts" },
    { "source": "/(.*)", "destination": "/dist/public/index.html" }
  ]
}
