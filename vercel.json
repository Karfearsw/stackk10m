{
  "version": 2,
  "builds": [
    {
      "src": "server/index-prod.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public", "buildCommand": "npm run build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index-prod.ts" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}
